<h1>Listing pages</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Text</th>
    <th>Notebook</th>
    <th>Experiment</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.date %></td>
    <td><%=h page.text %></td>
    <td><%=h page.notebook %></td>
    <td><%=h page.experiment %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path %>